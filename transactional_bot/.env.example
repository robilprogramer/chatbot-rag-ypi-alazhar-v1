# Application Settings
APP_NAME=YPI Al-Azhar Transactional Chatbot
APP_VERSION=1.0.0
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ypi_alazhar

# LLM Provider (pilih: openai, anthropic, azure)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Anthropic Claude Configuration (alternative)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=ypi_knowledge_base

# Embedding Model
EMBEDDING_MODEL=text-embedding-ada-002

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=[".pdf",".jpg",".jpeg",".png"]

# Session
SESSION_TIMEOUT=3600

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# RAG Settings
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Conversation
MAX_CONVERSATION_HISTORY=10

# Biaya Pendaftaran (dalam Rupiah)
COST_TK=5000000
COST_SD=7500000
COST_SMP=10000000
COST_SMA=12500000
